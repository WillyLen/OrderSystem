@{
    ViewBag.Title = "LoginAndRegister";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</head>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger mb-2 d-flex justify-content-center align-items-center" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<div class=" d-flex justify-content-center align-items-center">
    <form action="" method="post">
        <label for="account">輸入帳號 : </label>
        <input id="account" type="text" name="account" />
        <label for="password">輸入密碼 : </label>
        <input id="password" type="password" name="password" />
        <input type="hidden" name="sessionId" value="@ViewBag.sessionId" />
        <button type="submit" class="btn btn-primary">登入</button>
    </form>
</div>

<script>
    if (document.getElementById('account') == null) {
        alert('Account is null');
    }
</script>
