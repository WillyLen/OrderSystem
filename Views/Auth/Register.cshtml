@model OrderSystem.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

@section scripts {
    <script>
        function ToLogin() {
            window.location.href = '/Auth/Login?sessionId=@Model.SessionId';
        }

        const registerSuccess = @(Model.RegisterSuccess ? "true" : "false");

        document.addEventListener("DOMContentLoaded", function () {
            if (registerSuccess === true) {
                $('#RegisterModalLong').modal('show');
            }
        });


    </script>
}

@section Title {
    <h1 id="page-title-mainlang" class="pt-tw-text10">註冊系統</h1>
    <p id="page-title-sublang" class="">Register System</p>
}

@section Main {
    <!-- Modal -->
    <div class="modal fade" id="RegisterModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body d-flex justify-content-center">
                    <h1>@Model.Account，註冊成功!</h1>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" onclick="ToLogin()">關閉</button>
                </div>
            </div>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage as string))
    {
        <div class="alert alert-danger mb-2 d-flex justify-content-center align-items-center" role="alert">
            @Model.ErrorMessage
        </div>
    }
    <div class="d-flex justify-content-center align-items-center">
        <form action="" method="post">
            <label class="mb-5" for="account">信箱 : </label>
            <input id="email" type="email" name="email" required />
            <label class="mb-5" for="account">帳號 : </label>
            <input id="account" type="text" name="account" required />
            <label class="mb-5" for="password">密碼 : </label>
            <input id="password" type="password" name="password" required />
            <input type="hidden" name="sessionId" value="@Model.SessionId" />
            <div class="d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-primary" onclick="ToLogin()">返回</button>
                <button type="submit" class="btn btn-primary">確認</button>
            </div>
        </form>
    </div>
}