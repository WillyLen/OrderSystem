
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

@section scripts {
    <script>
        function Back()
        {
            window.location.href = '/Auth/Login?sessionId=@ViewBag.sessionId';
        }
    </script>
}

@section Title {
    <h1 id="page-title-mainlang" class="pt-tw-text10">註冊系統</h1>
    <p id="page-title-sublang" class="">Register System</p>
}

@section Main {
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger mb-2 d-flex justify-content-center align-items-center" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="d-flex justify-content-center align-items-center">
        <form action="" method="post">
            <label class="mb-5" for="account">信箱 : </label>
            <input id="account" type="email" name="email" required />
            <label class="mb-5" for="account">帳號 : </label>
            <input id="account" type="text" name="account" required />
            <label class="mb-5" for="password">密碼 : </label>
            <input id="password" type="password" name="password" required />
            <input type="hidden" name="sessionId" value="@ViewBag.sessionId" />
            <div class="d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-primary" onclick="Back()">返回</button>
                <button type="submit" class="btn btn-primary">確認</button>
            </div>
        </form>
    </div>
}